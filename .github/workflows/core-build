name: Kinto Core Build

on:
  pull_request:
    branches: [ main ]
    paths:
      - core/**

jobs:
  main:
    runs-on: ubuntu-latest
    steps:
      - name: Set up Go 1.13
        uses: actions/setup-go@v1
        with:
          go-version: 1.13
        id: go

      - name: Check out code into the Go module directory
        uses: actions/checkout@v2
        with:
          path: './core'

      - name: Build
        run: go build -v ./...

      - name: Test
        run: go test -v ./...
